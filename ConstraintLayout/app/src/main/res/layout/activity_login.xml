<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gtop"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gbottom"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:src="@mipmap/ic_zoro_foreground"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:text="WELCOME TO"
        android:textColor="#ffffff"
        android:textSize="30dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="ONE PIECE"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/login_editText_username"
        android:hint="Username"
        android:drawableLeft="@drawable/baseline_person_24"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toTopOf="@id/gtop"
        app:layout_constraintBottom_toBottomOf="@id/gbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/login_editText_password"
        android:inputType="textPassword"
        android:hint="Password"
        android:drawableLeft="@drawable/baseline_key_24"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="@id/gbottom"
        app:layout_constraintTop_toTopOf="@id/login_editText_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/login_btn_login"
        android:text="LOGIN"
        android:background="#FF0303"
        android:textColor="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintBottom_toBottomOf="@id/gbottom"
        app:layout_constraintTop_toTopOf="@id/login_editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:id="@+id/login_btn_facebook"
        android:background="#0820F4"
        android:textColor="#ffffff"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintVertical_bias=".6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gbottom"
        app:layout_constraintTop_toTopOf="@id/login_btn_login"
        app:layout_constraintRight_toLeftOf="@id/login_btn_google"
        android:text="FACEBOOK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/login_btn_google"
        android:background="#FF0303"
        android:textColor="#ffffff"
        android:layout_marginRight="0dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        app:layout_constraintWidth_percent=".48"
        app:layout_constraintVertical_bias=".6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/gbottom"
        app:layout_constraintLeft_toRightOf="@id/login_btn_facebook"
        app:layout_constraintTop_toTopOf="@id/login_btn_login"
        android:text="GOOGLE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/login_btn_register"
        android:text="REGISTER NOW"
        android:background="#FF0303"
        android:textColor="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/login_editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>