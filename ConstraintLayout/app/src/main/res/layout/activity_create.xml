<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_zoro_create_foreground"
        tools:layout_editor_absoluteX="400dp"
        tools:layout_editor_absoluteY="-16dp" />

    <TextView
        android:id="@+id/create_text_title"
        android:text="CREATE ACCOUNT"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/create_editText_email"
        android:hint="Email"
        android:drawableLeft="@drawable/baseline_email_24"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toTopOf="@id/create_text_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/create_editText_username"
        android:hint="Username"
        android:drawableLeft="@drawable/baseline_person_24"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintTop_toTopOf="@id/create_editText_email"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/create_editText_password"
        android:hint="Password"
        android:drawableLeft="@drawable/baseline_key_24"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:inputType="textPassword"
        app:layout_constraintVertical_bias="0.14"
        app:layout_constraintTop_toTopOf="@id/create_editText_username"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/create_editText_confirm_password"
        android:hint="Confirm Password"
        android:drawableLeft="@drawable/baseline_key_24"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:background="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:inputType="textPassword"
        app:layout_constraintVertical_bias="0.16"
        app:layout_constraintTop_toTopOf="@id/create_editText_password"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/create_btn_signin"
        android:text="SIGN IN"
        android:background="#FF0303"
        android:textColor="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/create_editText_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/create_btn_cancle"
        android:text="CANCLE"
        android:background="#FF0303"
        android:textColor="#ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintVertical_bias="0.22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/create_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>