<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:layout_height="match_parent"
    android:background="@drawable/co_op"
    tools:context=".CreateAccountActivity">
    <TextView
        android:text="CREATE ACCOUNT"
        android:gravity="center"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/createAccount_editText_email"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:hint="Email"
        android:drawableLeft="@drawable/baseline_mail_24"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/createAccount_editText_username"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:hint="Username"
        android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/createAccount_editText_password"
        android:inputType="textPassword"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:hint="Password"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/createAccount_editText_confirmPassword"
        android:inputType="textPassword"
        android:textColorHint="#FF0303"
        android:drawableTint="#FF0303"
        android:hint="Confirm password"
        android:drawableLeft="@drawable/baseline_key_24"
        android:drawablePadding="10dp"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/createAccount_btn_SignIn"
        android:text="SIGN IN"
        android:background="#FF0303"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/createAccount_btn_Cancle"
        android:text="CANCLE"
        android:background="#FF0303"
        android:textColor="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>