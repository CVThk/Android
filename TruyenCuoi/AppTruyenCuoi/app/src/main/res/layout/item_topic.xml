<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemtopic_item"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/itemTopic_cardView"
            android:layout_width="0dp"
            android:outlineSpotShadowColor="@android:color/transparent"
            app:layout_constraintWidth_percent=".5"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints">
            <ImageView
                android:translationZ="0dp"
                android:id="@+id/itemTopic_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/p4"/>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/itemTopic_guideLine_4"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/itemTopic_imageView_hide"
            android:translationZ="2dp"
            android:layout_gravity="right"
            android:background="@drawable/trapezoid"
            app:layout_constraintLeft_toRightOf="@id/itemTopic_guideLine_4"
            android:layout_width="120dp"
            android:layout_height="100dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/itemTopic_textView"
            android:translationZ="3dp"
            android:text="Công sở"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/itemTopic_cardView"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent=".5"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>