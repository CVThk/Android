<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:layout_toStartOf="@id/itemTopic_linearLayout_tool"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/itemTopic_textView_id"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/itemTopic_textView_name"
            android:text="tên chủ đề"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/itemTopic_linearLayout_tool"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/itemTopic_imageView_edit"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="@color/success" />
        <ImageView
            android:id="@+id/itemTopic_imageView_delete"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/baseline_delete_24"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:tint="#f20" />
    </LinearLayout>
</RelativeLayout>